<%= form_for([:admin, @service], html:{role: 'form'}) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this micropost from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="form-group">
    <%= f.label 'Наименование' %><br>
    <%= f.text_field :name, :size =>50 %>
  </div>
  <div class="form-group">
    <%= f.label 'Содержание' %><br>
    <%= f.text_area :content, :size => '48x6', :id => 'markdown' %>
  </div>
  <div class="form-group">
    <%= f.label 'Порядок' %><br>
    <%= f.number_field :sort %>
  </div>
  <div class="actions">
    <%= f.submit 'Принять', :class => 'btn btn-success' %>
  </div>
<% end %>
